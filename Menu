# coding: utf-8
import pilasengine

def iniciar_juego():
    print("iniciar juego")

def mostrar_ayuda():
    print("Ayuda")

def salir_del_juego():
    print("Tengo que salir...")

pilas = pilasengine.iniciar()

pilas.actores.Menu(
        [
            ('iniciar juego', iniciar_juego),
            ('ayuda', mostrar_ayuda),
            ('salir', salir_del_juego),
        ])

pilas.fondos.Color(pilas.colores.negro)
FondoMenu = pilas.fondos.Fondo()
FondoMenu.imagen = pilas.imagenes.cargar('fondo.png')


texto = pilas.actores.Texto("Telorevoleo")

texto.y=200
texto.color=pilas.colores.Color(255,0,0,0)
texto.escala=[1,4.5]
texto.rotacion=[0,360*3]

pilas.ejecutar()